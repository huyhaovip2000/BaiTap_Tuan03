<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vsmart_live_xanh1" />

    <TextView
        android:id="@+id/textView01"
        android:layout_width="336dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text="Điện Thoại Vsmart Joy 3 - Hàng chính hãng"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="143dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="(Xem 828 đánh giá)"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar1"
        app:layout_constraintStart_toEndOf="@+id/ratingBar1"
        app:layout_constraintTop_toTopOf="@+id/ratingBar1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt_Gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1.790.000 đ"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ratingBar1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ratingBar1"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar1" />

    <TextView
        android:id="@+id/txtHoanTien"
        android:layout_width="181dp"
        android:layout_height="26dp"
        android:layout_marginTop="76dp"
        android:text="Ở ĐÂU RẺ HƠN HOÀN TIỀN"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/ratingBar1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ratingBar1"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar1" />

    <Button
        android:id="@+id/btn_ChonMua"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/layout01_button"
        android:text="Chọn Mua"
        app:layout_constraintEnd_toEndOf="@+id/btn_Mau"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_Mau"
        app:layout_constraintTop_toBottomOf="@+id/btn_Mau" />

    <RatingBar
        android:id="@+id/ratingBar1"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="181dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:rating="5"
        android:scrollbarSize="4dp"
        android:theme="@style/star02"
        app:layout_constraintEnd_toEndOf="@+id/textView01"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView01"
        app:layout_constraintTop_toBottomOf="@+id/textView01" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="37dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtHoanTien"
        app:layout_constraintStart_toEndOf="@+id/txtHoanTien"
        app:layout_constraintTop_toTopOf="@+id/txtHoanTien"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <TextView

        android:id="@+id/txt_giamgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="@string/_1_790_000"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_Gia"
        app:layout_constraintStart_toEndOf="@+id/txt_Gia"
        app:layout_constraintTop_toTopOf="@+id/txt_Gia"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_Mau"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_marginTop="212dp"
        android:background="@drawable/layout01_button4mau"
        android:text="4 MÀU-CHỌN MÀU"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>